		"image": "tools/builddb/10.jpeg"
	},

	"step11": {
		"text": "<em>標記分析</em>，包含文字雲繪製與地圖打點。",
		"image": "tools/builddb/11.jpeg"
	},

	"step12": {
		"text": "開啟 <em>DocMeta</em>。",
		"image": "tools/builddb/12.jpeg"
	},

